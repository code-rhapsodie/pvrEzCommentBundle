{% extends "eZPlatformUIBundle::pjax_admin.html.twig" %}

{% block title %}Comments{% endblock %}

{% block header_title %}
    <h1 class="pvrezcomment-title">Comments</h1>
{% endblock %}

 
{% block content %}
    <div class="pure-g">
        <div class="pure-u-2-3">
            <div class="l-box">
                <table class="pure-table pure-table-horizontal">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Comment</th>
                        <th>Author</th>
                        <th>Content</th>
                        <th>Created</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                    <tr>
                        <td>&nbsp;</td>
                        <td>{{ comment.text }}</td>
                        <td>{{ comment.name }}</td>
                        {% set location = comment.contentobject_id|getMainLocation() %}
                        <td><a class="pvrezcomment-location" href=""
                                data-route-name="viewLocation"
                                data-route-id="{{ path('ezpublish_rest_loadLocation', {locationPath: location.pathString|trim('/')}) }}"
                                data-route-languageCode="{{ location.contentInfo.mainLanguageCode }}"
                            >
                            {{ comment.contentobject_id|getContentName() }}
                        </a></td>
                        <td>{{ comment.created|date() }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {#<ul class="pvrezcomment-list">#}
                    {#prout :)#}
                {#</ul>#}
            </div>
        </div>
        <div class="pure-u-1-3">
            <div class="l-box">
                {% include 'PvrEzCommentBundle:Dashboard:configuration.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}